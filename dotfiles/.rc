# android sdk
export PATH="$PATH:$HOME/.bin/Android/Sdk/build-tools/32.0.0"
export PATH="$PATH:$HOME/.bin/Android/Sdk/platform-tools"
export PATH="$PATH:$HOME/.bin/Android/Sdk/tools"

# flutter
export PATH="$PATH:$HOME/.bin/flutter/bin"
export CHROME_EXECUTABLE="$HOME/.local/share/flatpak/exports/bin/org.chromium.Chromium"

# better yaourt colors
export YAOURT_COLORS="nb=1:pkg=1:ver=1;32:lver=1;45:installed=1;42:grp=1;34:od=1;41;5:votes=1;44:dsc=0:other=1;35"

# ruby and ruby on rails
export PATH="$PATH:$HOME/.rbenv/bin"
export PATH="$PATH:$HOME/.rbenv/shims"
export GEM_HOME="$HOME/gems"
export PATH="$PATH:$HOME/gems/bin"

# qmk
export PATH="$PATH:$HOME/.local/bin"

source $HOME/.aliases

# python poetry
export PATH="$PATH:/home/luc/.local/bin"
unset PYTHONPATH
unset PYTHONHOME

# vim
export EDITOR=nvim
