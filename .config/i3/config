########################
# modes                #
########################

mode "resize" {
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

set $mode_power log [o]ut | [s]uspend | [r]eboot  | [p]oweroff | [l]ock
mode "$mode_power" {
    bindsym o mode "default"; exec i3-msg exit
    bindsym s mode "default"; exec systemctl suspend
    bindsym r mode "default"; exec reboot
    bindsym p mode "default"; exec systemctl poweroff
    bindsym l mode "default"; exec ~/.config/i3/lock-screen.sh
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym --release XF86PowerOff mode "$mode_power"
bindsym $mod+Shift+e mode "$mode_power"

